<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFrag">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotelList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_clear_list" />

    <Button
        android:id="@+id/btn_clear_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear List"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/emptyFavouritePlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="История на разглежданите Къмпинги/Хотели"
        android:textSize="23sp"
        android:visibility="invisible" />

</RelativeLayout>
